{
  "build_essential": {
    "compiletime": true
  },
  "db": {
      "driver": "mysql",
      "client_recipe": "mysql::client",
      "root": "root",
      "grant_hosts": [
        "localhost"
      ],
      "users": {
        "root": "root",
        "replication": "replication",
        "debian": "debian"
      }
  },
  "server": {
      "web_user": "www-data",
      "web_group": "www-data",
      "assets": "/srv/assets",
      "theme_default": "mytheme",
      "base": "/srv/www"
  },
  "php": {
    "directives": {
      "max_execution_time": "300",
      "max_input_time": "300",
      "memory_limit": "1024M",
      "error_reporting": "E_ALL | E_STRICT",
      "display_errors": "On",
      "display_startup_errors": "On",
      "html_errors": "On",
      "post_max_size": "210M",
      "file_uploads": "On",
      "upload_max_filesize": "200M",
      "date.timezone": "America/Denver",
      "apc.enable_cli": "1",
      "apc.shm_size": "64M"
    },
    "conf_dir" : "/etc/php5/apache2"
  },
  "mysql": {
    "tunable": {
      "max_allowed_packet": "16M",
      "key_buffer_size": "32M",
      "max_connect_errors": "1000",
      "tmp_table_size": "32M",
      "max_connections": "500",
      "thread_cache_size": "50",
      "table_open_cache": "512",
      "innodb_flush_log_at_trx_commit": "0",
      "innodb_file_per_table": "1",
      "innodb_buffer_pool_size": "128M",
      "innodb_flush_method": "O_DIRECT",
      "sync_binlog": "0"
    }
  },
  "drupal": {
    "drush": {
      "repository": "https://github.com/drush-ops/drush.git",
      "revision": "master"
    },
    "sites": {
      "pca": {
        "active": true,
        "deploy": {
          "action": "import",
          "releases": 1
        },
        "css_preprocessor": {
          "location": "sites/all/themes/pca",
          "gems": [
            "bundler"
          ],
          "commands": [
            "bundle install",
            "bundle update",
            "bundle exec compass compile"
          ]
        },
        "drupal": {
          "version": 7.26,
          "settings": {
            "files": "sites/default/files",
            "settings": "sites/default/settings.php",
            "cookbook": "drupal",
            "template": "d7.settings.php.erb",
            "db_file": "pca.sql",
            "db_name": "pca",
            "db_host": "localhost",
            "db_prefix": "",
            "db_driver": "mysql"
          }
        },
        "repository": {
          "host": "bitbucket.org",
          "uri": "git@bitbucket.org:draenen/pca.git",
          "revision": "master",
          "remotes": {
            "upstream": "git@bitbucket.org:monarchd/pca.git"
          }
        },
        "web_app": {
          "80": {
            "server_name": "pca.local",
            "rewrite_engine": "On",
            "docroot": "/srv/www/pca/current"
          }
        }
      }
    }
  }
}
